<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.taha.slotmachine.MainActivity">

    <ImageView
        android:id="@+id/MainBackGround"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/mainbackground" />

    <TextView
        android:id="@+id/PlayerMoney"
        android:layout_width="84dp"
        android:layout_height="19dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="108dp"
        android:text="Player Money"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03"
        tools:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/PlusOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="224dp"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="43dp"
        android:text="Add $1"
        app:layout_constraintBottom_toTopOf="@+id/Restart"
        app:layout_constraintEnd_toStartOf="@+id/PlusFive"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/PlusFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="272dp"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="17dp"
        android:text="Add $5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/PlusTen"
        app:layout_constraintStart_toEndOf="@+id/PlusOne" />

    <Button
        android:id="@+id/PlusTen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="224dp"
        android:layout_marginEnd="36dp"
        android:text="Add $10"
        app:layout_constraintBottom_toTopOf="@+id/Quit"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/Restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="Restart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="Quit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/RailOne"
        android:layout_width="69dp"
        android:layout_height="35dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="140dp"
        android:text="railOne"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RailTwo"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="140dp"
        android:text="RailTwo"
        app:layout_constraintStart_toEndOf="@+id/RailOne"
        app:layout_constraintTop_toTopOf="@+id/MainBackGround" />

    <TextView
        android:id="@+id/RailThree"
        android:layout_width="68dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="140dp"
        android:text="RailThree"
        app:layout_constraintStart_toEndOf="@+id/RailTwo"
        app:layout_constraintTop_toTopOf="@+id/MainBackGround" />

    <TextView
        android:id="@+id/Bet"
        android:layout_width="50dp"
        android:layout_height="17dp"
        android:layout_marginBottom="384dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Bet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/WonInRound"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginBottom="416dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="18dp"
        android:text="WonInRound"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/RailThree" />

</android.support.constraint.ConstraintLayout>
